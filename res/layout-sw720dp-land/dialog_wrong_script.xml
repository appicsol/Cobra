<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_top"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#95000000"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="2.7" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clickable="false"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.7"
        android:clickable="false"
        android:orientation="horizontal"
        android:weightSum="1.5" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:clickable="false"
            android:orientation="horizontal" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/corner"
            android:clickable="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_infocontainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_layout"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity=""
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/waring_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/warning_dialog_icon" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/waring_icon"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:id="@+id/value_wrong_script_msg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="The 18R2 is running:"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/showcontrols_textsize" />

                    <TextView
                        android:id="@+id/value_wrong_script_msg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/value_wrong_script_msg1"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="Script: 1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/showcontrols_textsize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/value_wrong_script_msg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/value_wrong_script_msg2"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="which is different from the selected Script: 2"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/showcontrols_textsize" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                <Button
                    android:id="@+id/btn_stop_script"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/d_wrong_sript_stop"
                    android:textSize="@dimen/showcontrols_textsize_small" />

                <Button
                    android:id="@+id/btn_continue_script"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/d_wrong_sript_continue"
                    android:textSize="@dimen/showcontrols_textsize_small" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:clickable="false"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clickable="false"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>