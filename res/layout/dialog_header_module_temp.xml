<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_top"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#95000000"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="15.6" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clickable="false"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="13.6"
        android:clickable="false"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:clickable="false"
            android:orientation="horizontal" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/corner"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE" >

                <ImageView
                    android:id="@+id/left_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/button_left_arrow" />

                <ImageView
                    android:id="@+id/right_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/button_right_arrow" />

                <RelativeLayout
                    android:id="@+id/mainView"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/right_button"
                    android:layout_toRightOf="@+id/left_button" >

                    <RelativeLayout
                        android:id="@+id/scriptTopView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="#a7a7a7" >

                        <TextView
                            android:id="@+id/script_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="@string/script_cues_txt"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/showcontrols_textsize" />

                        <TextView
                            android:id="@+id/txt_script_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="1dp"
                            android:layout_toRightOf="@+id/script_text"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/showcontrols_textsize" />

                        <TextView
                            android:id="@+id/channel_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/txt_script_name"
                            android:text="@string/channel_cues_txt"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/showcontrols_textsize" />

                        <TextView
                            android:id="@+id/txt_channel_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="1dp"
                            android:layout_toRightOf="@+id/channel_text"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/showcontrols_textsize" />

                        <TextView
                            android:id="@+id/btn_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:padding="5dp"
                            android:text="@string/dialog_close_cues_txt"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/showcontrols_textsize" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/headingView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scriptTopView" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="12" >

                            <RelativeLayout
                                android:id="@+id/cues_heading_view"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@drawable/script_cue_corner" >

                                <TextView
                                    android:id="@+id/in_head_cue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="true"
                                    android:padding="2dp"
                                    android:text="@string/in_head_cue"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/showcontrols_textsize_meddium"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/event_time_heading_view"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@drawable/script_cue_corner" >

                                <TextView
                                    android:id="@+id/in_head_event_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="true"
                                    android:text="@string/in_head_event_time"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/showcontrols_textsize_meddium"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/desc_heading_view"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@drawable/script_cue_corner" >

                                <TextView
                                    android:id="@+id/in_head_desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="true"
                                    android:text="@string/in_head_description"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/showcontrols_textsize_meddium"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/cues_number_View"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/layout_bottom"
                        android:layout_below="@+id/headingView"
                        android:background="@android:color/transparent"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layout_bottom"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/transparent" >

                        <TextView
                            android:id="@+id/txt_script_counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="3dp"
                            android:text="1 of 1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/showcontrols_textsize_small" />

                        <ImageView
                            android:id="@+id/img_swipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_script_counter"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/swipe_icon" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:clickable="false"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clickable="false"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>