<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="vertical"
    android:weightSum="2"
    tools:ignore="HardcodedText" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:orientation="horizontal"
        android:weightSum="30"
        tools:ignore="HardcodedText" >

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center"
            android:text="00:00:00.0"
            
            android:textSize="@dimen/showcontrols_textsize" />

        <TextView
            android:id="@+id/tvCh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="##"
            android:textSize="@dimen/showcontrols_textsize" />

        <TextView
            android:id="@+id/tvCues"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="##,##,##,##,##,##,##"
            android:textSize="@dimen/showcontrols_textsize" />

        <TextView
            android:id="@+id/scriptDescTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:gravity="center|left"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="This expression is exactly 70 characters, including all of the spaces."
            android:textSize="@dimen/showcontrols_textsize" />

        <Button
            android:id="@+id/jumpToEventButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Jump"
            android:textColor="@android:color/black"
            android:textSize="@dimen/showcontrols_textsize" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:visibility="visible" />

</LinearLayout>