<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:columnCount="5"
    android:rowCount="1" >

    <Button
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_row="0"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Menu"
        android:visibility="gone" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_row="0"
        android:layout_margin="10dp"
        android:background="@drawable/button_force_refresh"
        android:padding="@dimen/module_list_forceRefresh_padding"
        android:text="@string/module_list_btn_force_refresh"
        android:textColor="@android:color/black"
        android:textSize="@dimen/module_list_textsize" />

    <TextView
        android:id="@+id/txtTries"
        android:layout_column="1"
        android:layout_gravity="right|bottom"
        android:layout_row="0"
        android:padding="10dp"
        android:text="No. tries" />

    <Spinner
        android:id="@+id/editTries"
        android:layout_column="3"
        android:layout_gravity="left|bottom"
        android:layout_row="0"
        android:text="2" />

    <Button
        android:id="@+id/helpButton"
        android:layout_column="4"
        android:layout_gravity="right|bottom"
        android:layout_row="0"
        android:text="Help"
        android:visibility="invisible" />

</GridLayout>